    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:content.media"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "t:content.image_wd_1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "t:content.image_wd_2"
